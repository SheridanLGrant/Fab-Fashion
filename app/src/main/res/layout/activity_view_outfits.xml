<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:id="@+id/view_outfits"
    android:background="#ffe4fff4">//need to set up ID


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/your_outfits_message"
        android:src="@drawable/ic_hanger" />

    <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#ff001656"
        android:layout_below="@+id/your_outfits_message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:textSize="30sp"
        android:text="Your Outfits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff001656"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/your_outfits_message"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:id="@+id/topScrollerChoose"
        android:fillViewport="true"
        android:layout_below="@+id/shoeScrollerChoose"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/chooseTopLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:id="@+id/bottomScrollerChoose"
        android:layout_below="@+id/your_outfits_message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp">

        <LinearLayout
            android:id="@+id/chooseBottomLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:id="@+id/shoeScrollerChoose"
        android:fillViewport="false"
        android:layout_below="@+id/bottomScrollerChoose"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:id="@+id/chooseShoeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_toEndOf="@+id/textView"
        android:src="@drawable/ic_hanger"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginLeft="34dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
